<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:jee="http://www.springframework.org/schema/jee" 
    xmlns:context="http://www.springframework.org/schema/context" 
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
    http://www.springframework.org/schema/jee
    http://www.springframework.org/schema/jee/spring-jee-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd 
    http://www.springframework.org/schema/tx 
    http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">

    <!-- 自动扫描boke包下所有类的注解 -->
    <context:component-scan base-package="edu.ahpu.boke" />

    <!-- 配置数据源bean -->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <!-- JDBC连接参数 -->
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/boke?useUnicode=true&amp;characterEncoding=utf-8" />
        <property name="user" value="root" />
        <property name="password" value="123456" />
       
        <!-- 连接池保留的最小连接数 -->
        <property name="minPoolSize" value="5" />

        <!-- 连接池保留的最大连接数 -->
        <property name="maxPoolSize" value="30" />

        <!-- 系统初始化时获取的连接数 -->
        <property name="initialPoolSize" value="10" />

        <!-- 连接的最大空闲时间（时间达到则丢弃连接）  -->
        <property name="maxIdleTime" value="60" />

        <!-- 连接被耗尽时，一次获取的连接数 -->
        <property name="acquireIncrement" value="5" />

        <!-- 空闲连接的检查周期 -->
        <property name="idleConnectionTestPeriod" value="60" />

        <!-- 获取新连接失败后重复尝试的次数 -->
        <property name="acquireRetryAttempts" value="30" />
    </bean>
    
	<bean id="dataSourceQA" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <!-- JDBC连接参数 -->
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="jdbcUrl" value="jdbc:mysql://172.16.11.50:3306/boke?useUnicode=true&amp;characterEncoding=utf-8" />
        <property name="user" value="root" />
        <property name="password" value="SXQAadmin*^" />
       
        <!-- 连接池保留的最小连接数 -->
        <property name="minPoolSize" value="5" />

        <!-- 连接池保留的最大连接数 -->
        <property name="maxPoolSize" value="30" />

        <!-- 系统初始化时获取的连接数 -->
        <property name="initialPoolSize" value="10" />

        <!-- 连接的最大空闲时间（时间达到则丢弃连接）  -->
        <property name="maxIdleTime" value="60" />

        <!-- 连接被耗尽时，一次获取的连接数 -->
        <property name="acquireIncrement" value="5" />

        <!-- 空闲连接的检查周期 -->
        <property name="idleConnectionTestPeriod" value="60" />

        <!-- 获取新连接失败后重复尝试的次数 -->
        <property name="acquireRetryAttempts" value="30" />
    </bean>
    
    
    <!-- 配置Hibernate的会话工厂bean（Spring整合Hibernate） -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <!-- 注入上面配置的数据源bean -->
<!--         <property name="dataSource" ref="dataSource" /> -->
        <property name="dataSource" ref="dataSourceQA" />
  
        <!-- Hibernate配置文件的位置 -->
        <property name="configLocation">
            <!-- 位于类路径下 -->
            <value>classpath:hibernate.cfg.xml</value>
        </property>
    </bean>

    <!-- 配置事务管理器bean（让Spring管理事务） -->
    <bean id="txManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
         <!-- 注入上面配置的会话工厂bean -->
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <!-- 定义事务通知 -->
    <tx:advice id="txAdvice" transaction-manager="txManager">
        <!-- 根据方法名称配置事务的传播属性 -->
        <tx:attributes>
            <!-- 事务方法 -->
            <tx:method name="save*" propagation="REQUIRED" />
            <tx:method name="add*" propagation="REQUIRED" />
            <tx:method name="create*" propagation="REQUIRED" />
            <tx:method name="insert*" propagation="REQUIRED" />
            <tx:method name="update*" propagation="REQUIRED" />
            <tx:method name="modify*" propagation="REQUIRED" />
            <tx:method name="merge*" propagation="REQUIRED" />
            <tx:method name="delete*" propagation="REQUIRED" />
            <tx:method name="remove*" propagation="REQUIRED" />
            <tx:method name="set*" propagation="REQUIRED" />
            <tx:method name="put*" propagation="REQUIRED" />

            <!-- 非事务方法 -->
            <tx:method name="get*" propagation="SUPPORTS" read-only="true" />
            <tx:method name="load*" propagation="SUPPORTS" read-only="true" />
            <tx:method name="count*" propagation="SUPPORTS" read-only="true" />
            <tx:method name="find*" propagation="SUPPORTS" read-only="true" />
            <tx:method name="query*" propagation="SUPPORTS" read-only="true" />
            <tx:method name="is*" propagation="SUPPORTS" read-only="true" />
            <tx:method name="list*" propagation="SUPPORTS" read-only="true" />
        </tx:attributes>
    </tx:advice>

    <!-- AOP配置 -->
    <aop:config>
        <!-- 定义切入点service -->
        <aop:pointcut expression="execution (* edu.ahpu.boke.service..*.*(..))" id="service" />
        
        <!-- 对切入点service使用上面定义的事务通知 -->
        <aop:advisor advice-ref="txAdvice" pointcut-ref="service" />
    </aop:config>
</beans>